---
import { Icon } from "astro-icon/components";
export type Props = {
    alt: string;
    human?: string;
    href: string;
    icon: string;
};
let { alt, human, href, icon } = Astro.props;
human ??= alt;
---

<a
    title={human}
    target="_blank"
    href={href}
    class="flex size-12 items-center justify-center rounded-xl text-2xl text-neutral-400 transition-all hover:bg-neutral-300 hover:bg-opacity-40 hover:text-neutral-600 dark:hover:text-neutral-200 dark:hover:bg-neutral-700 dark:hover:bg-opacity-40"
>
    <Icon name={`mingcute:${icon}`} class="not-sr-only" />
    <span class="sr-only">{alt}</span>
</a>
