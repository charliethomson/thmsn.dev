---
import "@fontsource-variable/nunito";
import BaseHead from "../components/BaseHead.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body
        class={"xs:px-4 xs:py-4 flex w-screen items-center bg-slate-800 dark:bg-slate-900 justify-center " +
            "overflow-hidden px-2 py-2 pb-8 transition-all sm:px-16 sm:py-16 md:px-24 md:py-16 lg:px-32 lg:py-32"}
    >
        <article
            id="root"
            class={"h-full max-w-7xl flex-1 rounded-3xl bg-slate-200 dark:bg-slate-800 p-8 md:p-16 " +
                "shadow-2xl shadow-slate-900 dark:shadow-slate-950 text-slate-800 dark:text-slate-300"}
        >
            <slot />
        </article>
        <footer class="absolute bottom-1 flex gap-8">
            <span
                class="lowercase text-slate-400 dark:text-slate-700 flex items-center gap-1 tracking-wide"
            >
                made with
                <span class="before:content-['ðŸ’™'] dark:before:content-['ðŸ–¤']"
                ></span>
                in va
            </span>
        </footer>
    </body>
</html>

<style is:global>
    body {
        background-image: url("/always-grey.png");
        background-size: 24px;
        background-repeat: repeat;
        font-family: "Nunito Variable", sans-serif;
        height: 100dvh;
    }

    #root {
        position: relative;
    }

    #root > * {
        position: relative;
        z-index: 10;
    }

    #root::before {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        content: "";
        border-radius: 1.5rem;
        background-image: url("/asfalt-dark.png");
        background-size: 128px;
        background-repeat: repeat;
        z-index: 1;
    }

    .dark #root::before {
        background-image: url("/asfalt-light.png");
        filter: opacity(0.6) blur(0.1px);
    }
</style>
