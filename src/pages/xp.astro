---

<BaseLayout>
  <h1 slot="header-title" class="text-3xl font-semibold">Work History</h1>
  <main class="flex flex-col gap-8 px-2">
    {
      experiences.map((exp) => (
        <article class="flex flex-col gap-3 pb-6 border-b border-neutral-300 dark:border-neutral-700 last:border-0">
          <header class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-2">
            <div class="flex flex-col">
              <h2 class="text-xl font-bold">
                <Link target="_blank" to={exp.companyUrl}>
                  {exp.company}
                </Link>
              </h2>
              <p class="text-lg text-neutral-700 dark:text-neutral-400">
                {exp.role}
              </p>
            </div>
            <time class="text-sm text-neutral-500 dark:text-neutral-500 font-light shrink-0">
              {exp.period}
            </time>
          </header>

          <ul class="flex flex-col gap-2 text-base">
            {exp.highlights.map((highlight) => (
              <li class="flex gap-2 items-start">
                <Icon
                  name="mingcute:right-fill"
                  class="size-5 shrink-0 text-rose-700 dark:text-rose-300 mt-0.5"
                />
                <span>
                  {highlight.text
                    .split(
                      new RegExp(
                        `(${highlight.links.map((l) => l.text).join("|")})`,
                        "g",
                      ),
                    )
                    .map((part) => {
                      const link = highlight.links.find((l) => l.text === part);
                      if (link) {
                        return (
                          <Link target="_blank" to={link.url}>
                            {link.text}
                          </Link>
                        );
                      }
                      return part;
                    })}
                </span>
              </li>
            ))}
          </ul>
        </article>
      ))
    }
  </main>
</BaseLayout>
