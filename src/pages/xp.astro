---
import BaseLayout from "../layouts/BaseLayout.astro";
import Link from "../components/Link.astro";
import { Icon } from "astro-icon/components";

const experiences = [
  {
    period: "09/2024 - present",
    company: "Velera",
    companyUrl: "https://velera.com",
    role: "Software Engineer III",
    highlights: [
